# Database Configuration (SQLite)
# Database file is automatically created in backend/data/college_bus_tracker.db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=24h

# Server Configuration
PORT=3004
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Google Maps API Key (for frontend)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Frontend Configuration (for Vite proxy)
# This environment variable is used by the frontend Vite dev server
# to proxy API requests to the correct backend port
VITE_BACKEND_URL=http://localhost:3004

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
